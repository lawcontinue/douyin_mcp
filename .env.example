# 基础配置
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/douyin_lawyer_mcp
REDIS_URL=redis://localhost:6379/0

# 抖音配置
DOUYIN_USERNAME=your_douyin_username
DOUYIN_PASSWORD=your_douyin_password
DOUYIN_LOGIN_TYPE=qrcode  # qrcode, sms, password

# AI模型配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1
ANTHROPIC_API_KEY=your_anthropic_api_key

# 监控配置
MONITOR_INTERVAL=300  # 监控间隔（秒）
MAX_REPLIES_PER_HOUR=10
ENABLE_AUTO_REPLY=True

# 代理配置
PROXY_ENABLED=False
PROXY_URL=http://proxy:port
PROXY_USERNAME=
PROXY_PASSWORD=

# 缓存配置
CACHE_TTL=3600  # 缓存时间（秒）
ENABLE_REDIS_CACHE=True

# 安全配置
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# 通知配置
WEBHOOK_URL=
EMAIL_ENABLED=False
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# 文件上传配置
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.mp4,.avi

# 风险控制
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_MINUTE=60
ENABLE_CONTENT_FILTER=True
